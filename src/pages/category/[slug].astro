---
import Layout from '~/layouts/PageLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  const categories = [...new Set(posts.map((p) => p.data.category))];
  
  return categories.map((category) => ({
    params: { slug: encodeURIComponent(category) },
    props: { category },
  }));
}

const { category } = Astro.props;
const { slug } = Astro.params;

const posts = (await getCollection('blog'))
  .filter((p) => p.data.category === category && !p.data.draft)
  .sort((a, b) => +b.data.date - +a.data.date);

const metadata = {
  title: `Category: ${category}`,
};
---

<Layout metadata={metadata}>
  <section class="py-12 md:py-16 px-4 mx-auto max-w-7xl">
    <div class="mb-12">
      <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-4">
        {category}
      </h1>
      <p class="text-lg text-muted">
        {posts.length} {posts.length === 1 ? 'POC' : 'POCs'} in this category
      </p>
    </div>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {posts.map(({ id, data }) => {
        const postSlug = id.replace(/\.mdx?$/, '');
        return (
          <a 
            href={`/poc/${postSlug}`}
            class="group block rounded-xl overflow-hidden border border-gray-200 dark:border-gray-800 hover:border-gray-300 dark:hover:border-gray-700 transition-all hover:shadow-lg"
          >
            {data.thumb && (
              <div class="aspect-video overflow-hidden bg-gray-100 dark:bg-gray-900">
                <img 
                  src={data.thumb} 
                  alt={data.title} 
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" 
                />
              </div>
            )}
            <div class="p-5">
              <div class="text-xs uppercase tracking-wide text-primary font-semibold mb-2">
                {data.category}
              </div>
              <h3 class="text-lg font-semibold group-hover:text-primary transition mb-2">
                {data.title}
              </h3>
              {data.subTitle && (
                <p class="text-sm text-muted line-clamp-2">
                  {data.subTitle}
                </p>
              )}
            </div>
          </a>
        );
      })}
    </div>

    <div class="mt-12">
      <a href="/work" class="text-primary hover:underline">
        ‚Üê Back to all POCs
      </a>
    </div>
  </section>
</Layout>

